  <body>
    <header class="main-header post-header mb-2">
      <a href="/">
        <img src="../images/Logo.png" alt="" class="logo m-3" />
      </a>

      <button id="menuButton" class="button-reset">
        <img src="../images/menu-rounded-100.png" alt="" />
      </button>
    </header>
    <aside class="hide menu" id="menu">
      <div class="">
        <section>
          <a href="api/users/{{data.id}}"
            ><article><p>Profile</p></article></a
          >
          <div
            class="pfp"
            id="menuPic"
            style="background-image: url({{data.profile_picture}})"
          ></div>
        </section>
        <section>
          <a href="/search"
            ><article><p>Search</p></article></a
          >
          <img src="../images/search_icon.png" alt="" />
        </section>
        <section>
          <a href="/newpost"
            ><article><p>Post</p></article></a
          >
          <img src="../images/plus_sign.png" alt="" />
        </section>
      </div>
    </aside>

    <main class="remove-shadow">
      <div class="profile-heading">
        <div
          class="user-page-pfp"
          style="background-image: url({{data.profile_picture}})"
        ></div>
        <div>
          <h3>{{data.username}}</h3>
        </div>
      </div>
      <section class="user-info">
        <p>{{data.followers.length}} Following</p>
        <p>{{data.followings.length}} Followers</p>
        <p>100k Barks</p>
      </section>
      <div class="user-posts">
        {{#each data.posts as |post|}}
        <iframe src="{{post.photo}}" class="image-posts"></iframe>
        {{/each}}
      </div>
    </main>
<script src="../js/user.js"></script>
